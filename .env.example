# App URL (for payment callback URLs). Use your production URL in production.
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase (backend database)
# Get URL and anon key from: Project Settings > API. Use service_role key for server (keep secret).
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Admin dashboard: set a secret password. Admin logs in with this to access /admin.
ADMIN_SECRET=your-admin-secret-password

# SSLCommerz (Bangladesh payment gateway)
# Sandbox: https://developer.sslcommerz.com/registration/
# Live: https://signup.sslcommerz.com/register
SSLCOMMERZ_STORE_ID=testbox
SSLCOMMERZ_STORE_PASS=qwerty
SSLCOMMERZ_IS_LIVE=false
